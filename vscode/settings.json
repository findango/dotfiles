{
    // https://code.visualstudio.com/docs/getstarted/theme-color-reference
    //"workbench.colorTheme": "GitHub Clean White",
    "workbench.colorTheme": "Light (Visual Studio for Mac)",
    "workbench.iconTheme": null,
    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#edeae6",
        "editorCursor.foreground": "#42b3f4",
        "editor.lineHighlightBackground": "#f5f5f5",
        "editorBracketMatch.background": "#b2ffb2",
        "editorBracketMatch.border": "#b2ffb2",
        "editorIndentGuide.background": "#ceeaf8",
        "editor.selectionHighlightBackground": "#edeae6",
        "editor.wordHighlightBackground": "#ceeaf8"
    },
    // "editor.fontFamily": "Inconsolata, Menlo, Monaco, 'Courier New', monospace",
    // "editor.fontFamily": "Fira Code",
    "editor.fontFamily": "Hasklig",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.lineHeight": 18,
    "editor.rulers": [100],
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent",
    "eslint.run": "onSave",
    "explorer.openEditors.visible": 7,
    "extensions.ignoreRecommendations": false,
    "files.trimTrailingWhitespace": true,
    "prettier.printWidth": 100,
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    // file search
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "*-debug.log": true,
        "*-error.log": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "build": true,
        "app-metrics-page/stage": true,
        "**/__snapshots__": true
    },
    // "search.useIgnoreFilesByDefault": true,
    "workbench.startupEditor": "newUntitledFile",
    "explorer.confirmDragAndDrop": false,
    // "workbench.panel.location": "right",
    "gitlens.advanced.messages": {
        "suppressFileNotUnderSourceControlWarning": true,
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressWelcomeNotice": true
    },
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.keymap": "chorded",
    "gitlens.historyExplorer.enabled": true,
    "gitlens.codeLens.enabled": false,
    "window.zoomLevel": 0,
    "terminal.integrated.fontSize": 13,
    "window.title": "$${activeEditorMedium}${separator}${rootName}",
    "yaml.format.enable": false,
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.enable": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "npm-intellisense.recursivePackageJsonLookup": false,
    "terminal.integrated.fontFamily": "monospace",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.snippetSuggestions": "top",
    "breadcrumbs.enabled": true,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none"
}
