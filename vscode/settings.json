{
    // https://code.visualstudio.com/docs/getstarted/theme-color-reference
    "workbench.colorTheme": "GitHub Clean White",
    "workbench.iconTheme": "vs-minimal",
    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#edeae6",
        "editorCursor.foreground": "#42b3f4",
        "editor.lineHighlightBackground": "#f5f5f5",
        "editorBracketMatch.background": "#b2ffb2",
        "editorBracketMatch.border": "#42b3f4",
        "editorIndentGuide.background": "#ceeaf8"
    },

    "editor.fontFamily": "Inconsolata, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.lineHeight": 18,
    "editor.rulers": [100],
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent",

    "eslint.run": "onSave",
    "explorer.openEditors.visible": 7,
    "extensions.ignoreRecommendations": false,
    "gitlens.blame.line.enabled": false,

    // automatic formatting
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "prettier.printWidth": 80,
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",

    // file search
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "build": true,
        "app-metrics-page/stage": true,
        "**/__snapshots__": true
    },
    "search.useIgnoreFilesByDefault": true
}
